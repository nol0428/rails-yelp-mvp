<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0">Restaurants</h1>
    <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
  </div>

  <div class="row g-4">
    <% @restaurants.each do |restaurant| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <%= link_to restaurant_path(restaurant), class: "text-decoration-none text-reset" do %>
          <div class="card h-100 shadow-sm card-restaurant">
            <%= image_tag "restaurant.jpg", alt: "Restaurant photo",
                          class: "card-img-top object-fit-cover",
                          style: "height: 180px;" %>

            <div class="card-body">
              <div class="d-flex align-items-start justify-content-between gap-2">
                <h2 class="h5 mb-1"><%= restaurant.name %></h2>
                <% if restaurant.category.present? %>
                  <span class="badge rounded-pill bg-secondary-subtle text-secondary-emphasis">
                    <%= restaurant.category.titleize %>
                  </span>
                <% end %>
              </div>

              <% if restaurant.address.present? %>
                <p class="text-muted mb-2 small">
                  <i class="fa-solid fa-location-dot me-1"></i>
                  <%= restaurant.address %>
                </p>
              <% end %>

              <p class="mb-0">
                Product description with <strong>relevant info</strong> only.
              </p>
            </div>

            <div class="card-footer bg-transparent border-0 pt-0">
              <span class="small text-muted">
                <i class="fa-regular fa-star me-1"></i>
                <%= pluralize(restaurant.reviews.count, "review") %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
